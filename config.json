{
    "reload_interval": 600,
    "controller": {
        "brightness_controller": {
            "file": "/sys/class/backlight/10-0045/brightness"
        },
        "fan_controller": {
            "pin": 21
        },
        "screen_controller": {
            "command": "XDG_RUNTIME_DIR=/run/user/1000 wlr-randr --output DSI-1"
        },
        "temperature_controller": {
            "command": "vcgencmd measure_temp"
        }
    },
    "handler": {
        "time_handler": {
            "interval": 60,
            "tasks": [
                {
                    "time": "19:00",
                    "endpoint": "brightness/set/25"
                },
                {
                    "time": "8:00",
                    "endpoint": "brightness/set/255"
                }
            ]
        },
        "condition_handler": {
            "interval": 30,
            "tasks": [
                {
                    "endpoint": "fan/set/on",
                    "conditions": [
                        {
                            "value1": {
                                "value": "fan/get",
                                "type": "endpoint"
                            },
                            "value2": {
                                "value": "off",
                                "type": "value"
                            },
                            "comparator": "="
                        },
                        {
                            "value1": {
                                "value": "temperature/get",
                                "type": "endpoint"
                            },
                            "value2": {
                                "value": 55.0,
                                "type": "value"
                            },
                            "comparator": ">"
                        }
                    ]
                },
                {
                    "endpoint": "fan/set/off",
                    "conditions": [
                        {
                            "value1": {
                                "value": "fan/get",
                                "type": "endpoint"
                            },
                            "value2": {
                                "value": "on",
                                "type": "value"
                            },
                            "comparator": "="
                        },
                        {
                            "value1": {
                                "value": "temperature/get",
                                "type": "endpoint"
                            },
                            "value2": {
                                "value": 45.0,
                                "type": "value"
                            },
                            "comparator": "<"
                        }
                    ]
                }
            ]
        },
        "flask_handler": {
            "port": 5000,
            "ip": "0.0.0.0"
        }
    }
}